{
    "parser": "@typescript-eslint/parser",
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "@typescript-eslint/no-use-before-define": "off",
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "no-empty-function": 1
    }
}
